- model_class = Glossary
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:sl_no) + ':'
  %br
  = @glossary.sl_no
%p
  %strong= model_class.human_attribute_name(:term) + ':'
  %br
  = @glossary.term
%p
  %strong= model_class.human_attribute_name(:definition) + ':'
  %br
  = @glossary.definition
%p
  %strong= model_class.human_attribute_name(:example) + ':'
  %br
  = @glossary.example
%p
  %strong= model_class.human_attribute_name(:url) + ':'
  %br
  = @glossary.url
%p
  %strong= model_class.human_attribute_name(:reference) + ':'
  %br
  = @glossary.reference
%p
  %strong= model_class.human_attribute_name(:remarks) + ':'
  %br
  = @glossary.remarks


= link_to t('.back', :default => t("helpers.links.back")), glossaries_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_glossary_path(@glossary), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), glossary_path(@glossary), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
