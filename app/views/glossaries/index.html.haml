- model_class = Glossary
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:sl_no)
      %th= model_class.human_attribute_name(:term)
      %th= model_class.human_attribute_name(:definition)
      %th= model_class.human_attribute_name(:example)
      %th= model_class.human_attribute_name(:url)
      %th= model_class.human_attribute_name(:reference)
      %th= model_class.human_attribute_name(:remarks)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @glossaries.each do |glossary|
      %tr
        %td= link_to glossary.id, glossary_path(glossary)
        %td= glossary.sl_no
        %td= glossary.term
        %td= glossary.definition
        %td= glossary.example
        %td= glossary.url
        %td= glossary.reference
        %td= glossary.remarks
        %td=l glossary.created_at
        %td
          = link_to t('.show', :default => t("helpers.links.show")), glossary_path(glossary), :class => 'btn btn-default btn-xs'
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_glossary_path(glossary), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), glossary_path(glossary), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_glossary_path, :class => 'btn btn-primary'
